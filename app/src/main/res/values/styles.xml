<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorHeader">@color/customHeader</item>
    </style>

    <style name="Toolbar" >
        <item name="android:background">@color/colorPrimary</item>
        <item name="android:theme">@style/ToolbarTheme</item>
    </style>

    <style name="ToolbarTheme" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorHeader">@color/customHeader</item>
    </style>

    <style name="Margin" />

    <style name="Margin.Vertical">
        <item name="android:layout_marginTop">@dimen/distance_regular</item>
        <item name="android:layout_marginBottom">@dimen/distance_regular</item>
    </style>

    <style name="Margin.Horizontal">
        <item name="android:layout_marginStart">@dimen/distance_regular</item>
        <item name="android:layout_marginEnd">@dimen/distance_regular</item>
    </style>

    <style name="Margin.All">
        <item name="android:layout_marginTop">@dimen/distance_regular</item>
        <item name="android:layout_marginBottom">@dimen/distance_regular</item>
        <item name="android:layout_marginStart">@dimen/distance_regular</item>
        <item name="android:layout_marginEnd">@dimen/distance_regular</item>
    </style>

</resources>
